<header class="intro-header" style="background-image: url('//s3.ap-northeast-2.amazonaws.com/sungurails/home-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>모임 수정하기</h1>
                    <hr class="small">
                    <span class="subheading">내용을 수정해주세요!</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
  <%= form_tag "/post/update/#{@post.id}", method: "post" do %>
    <div class="form-group">
      <label>모임 이름</label>
      <input name="title" type="text" class="form-control" value="<%=@post.title %>">
    </div>
    <div class="form-group">
      <label>지역구</label>
      <input name="region" type="text" class="form-control" value="<%=@post.region %>">
    </div>
    <div class="form-group">
      <label>모임 시간대</label>
      <div class="radio">
        <label>
          <input type="radio" name="day" id="optionsRadios1" value="option1" checked>
          평일
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="day" id="optionsRadios2" value="option2">
          주말
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="day" id="optionsRadios3" value="option3">
          평일 + 주말
        </label>
      </div>
    </div>
    <div class="form-group">
      <label>모임 목적</label>
      <input name="purpose" type="text" class="form-control" value="<%=@post.purpose %>">
    </div>
    <div class="form-group">
      <label>최대 인원</label>
      <select class="form-control" name="people">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
      </select>
    </div>
    <div class="form-group">
      <label>모집 기간</label>
      <select class="form-control" name="dday">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
        <option>7</option>
        <option>8</option>
        <option>9</option>
        <option>10</option>
        <option>11</option>
        <option>12</option>
        <option>13</option>
        <option>14</option>
      </select>
    </div>
    <div class="form-group">
      <label>모임 설명</label>
      <textarea name="content" class="form-control" rows="7"><%=@post.content %></textarea>
    </div>
    <div class="text-center">
    <button style="margin-bottom: 30px; margin-top: 20px;" class="btn btn-default">수정하기</button>
    </div>
  <% end %>
</div>