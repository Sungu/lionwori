<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->

<link rel="shortcut icon" href="favicon.ico">

<header class="intro-header" style="background-image: url('https://s3.ap-northeast-2.amazonaws.com/sungurails/lion-1305797_1920.jpg'); font-family: 'Nanum Gothic';">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>사자우리</h1>
                    <hr class="small">
                    <span class="subheading" style="font-family:Nanum Gothic">함께할 <helloo>'우리'</helloo>를 만들어보아요</span>
                </div>
            </div>
        </div>
    </div>
</header>
<% if user_signed_in? %>

<div class="container" style="font-family: 'Nanum Gothic', serif;">
  <!-- Normal Demo-->
  <div class="row">
    <% @post.each do |a| %>
      <div class="col-lg-6" style="margin-bottom:30px">
        <!-- Post-->
        <a href="/post/show/<%=a.id %>" style="text-decoration:none">
          <div class="post-module">
            <!-- Thumbnail-->
            <div class="thumbnail">
              <div class="date">
                <div class="day"><%= (a.created_at + (a.dday*86400)).day %> <%= (a.created_at + (a.dday*86400)).strftime("%b") %></div>
                <div class="month">마감</div>
              </div><img src="<%= a.img.url %>"/>
            </div>
            <!-- Post Content-->
            <div class="post-content">
              <div class="category">By <%= User.find(a.user_id).name %></div>
              <h1 class="title text-center"><%= a.title %></h1>
              <h2 class="sub_title text-center" style="font-weight:bold"><%= a.region %></h2>
              <p class="description text-center"style="font-weight:bold"><strong><%= a.purpose %></strong><br><%= (a.applicants.count)%>/<%= a.people %></p>
              <div class="post-meta"><span class="timestamp"><i class="fa fa-clock-o" style="margin-right:15px"></i><%=time_ago_in_words(a.created_at)%> ago</span><span class="comments"><i class="fa fa-comments"></i><a href="#"> <%= a.comments.count %> comments</a></span></div>
            </div>
          </div>
        </a>
      </div>
    <% end %>
    
    <div class="text-center">
      <%= will_paginate @post%>
     </div>
  </div>
</div>



<script>
  $(window).load(function() {
  $('.post-module').hover(function() {
    $(this).find('.description').stop().animate({
      height: "toggle",
      opacity: "toggle"
    }, 300);
  });
});
</script>
  
  
<% else %>
<div class="container text-center">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    
      <h2 style="margin-bottom:78px;margin-top: 110px;">페이스북으로 로그인해주세요!</h2>

    </div>
  </div>
</div>
<% end %>

